{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "build:css": "postcss resources/css/tailwind.css -o public/assets/css/app.css",
        "start": "npm run build:css && react-scripts start"
    },
    "devDependencies": {
        "axios": "^0.21",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "postcss": "^8.1.14"
    },
    "dependencies": {
        "autoprefixer": "^10.3.1",
        "postcss-cli": "^8.3.1",
        "tailwindcss": "^2.2.7"
    }
}